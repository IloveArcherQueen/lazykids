{
  "manifest_version": 3,
  "name": "Smart Task Manager",
  "version": "2.0",
  "description": "Plan tasks, manage schedules, and block distracting websites dynamically!",
  "permissions": [
    "storage",
    "declarativeNetRequest",
    "alarms",
    "scripting"
  ],
  "host_permissions": [
    "https://*.facebook.com/*",
    "https://*.instagram.com/*",
    "https://*.youtube.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
  
}
